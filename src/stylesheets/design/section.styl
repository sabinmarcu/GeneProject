section
	position fixed
	overflow hidden
	top 45px 
	bottom 0
	right 0
	left 0
	article
		position absolute
		left 0
		right 0
		top 0
		bottom 0
		overflow auto
		z-index -1
		transition all 0.5s ease-in-out
		width 950px
		margin 0 auto
		padding 25px
		p
			text-indent 25px
		.right
			margin-right 0
			float right
			clear right
		.left
			margin-left 0
			float left
			clear left
		.center
			clear both
			text-align center
			margin 0 auto
			overflow hidden
		img 
			margin 15px
			background white
			border solid 1px #ccc
			border-radius 5px
			padding 5px
		figure
			background white
			border-radius 5px 
			border solid 1px #ccc
			padding 10px
			text-align center
			display table
			width 1px
			figcaption
				text-align center
				margin 10px 0 0
				padding 5px
				font-size 10pt
			img
				border none
				padding 0
				margin 0 0 10px
				display inline
			* 
				vertical-align bottom
				display table-row
				max-width 880px
			&.right *, &.left *
				max-width 200px
		.center figure.center
				width 22%
				float left
				clear none
				height 150px
		&#home 
			background urL("/images/7379.jpg") no-repeat center center
			background-size stretch
			width 100%
		&.active
			z-index 1
			transform translateX(0)
		transform translateX(-150%)
		&.active + article
			transform translateX(150%)
		&.active + article + article
			transform translateX(200%)
		&.active + article + article + article
			transform translateX(250%)
		&.active + article + article + article + article
			transform translateX(300%)
		img
			padding 5px
			background white
			border solid 1px #ccc
			margin 5px
			&.right
				float right !important
				margin-right none
			&.left 
				float left !important
				margin-left none
			&.center
				margin-left none
				margin-right none
		ul li
			overflow hidden
			margin 0
			padding 0
			list-style circle
			display table
			img
				max-width 200px
				max-height 200px
				float left
			p
				display table-cell
				vertical-align middle
				padding 15px
