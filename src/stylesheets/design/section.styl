section
	position fixed
	top 0
	bottom 0
	right 0
	left 0
	z-index 0
	overflow hidden
	transition all 0.5s ease-in-out
	transform translateY(100%)
	article
		position fixed
		top 100%
		bottom 0
		right 0
		left 0
		z-index 9
		&.active
			top 0
		div
			max-width 920px
			padding 20px
			margin 100px auto 0
			height 100%
			border-top-left-radius 5px
			border-top-right-radius 5px
			background white
&.active section
	z-index 2
	transform translateY(0)