section
	position fixed
	top 0
	bottom 0
	right 0
	left 0
	z-index 0
	overflow hidden
	transition all 0.5s ease-in-out
	transform translateY(100%)
	article
		position fixed
		top 100%
		bottom 0
		right 0
		left 0
		z-index 9
		padding-top 100px
		&.active
			top 0
		> div
			max-width 920px
			padding 0 20px
			height 100%
			border-top-left-radius 5px
			border-top-right-radius 5px
			background white
			overflow-y auto
			margin 0 auto
			> *
				&:first-child
					margin-top 25px
				&:last-child 
					margin-bottom 25px
&.active section
	z-index 2
	transform translateY(0)