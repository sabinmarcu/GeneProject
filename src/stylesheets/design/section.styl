section
	position fixed
	overflow hidden
	top 0 
	bottom 45px
	right 0
	left 0
	perspective 1600
	background black
	article
		position absolute
		left 0
		right 0
		top 0
		bottom 0
		overflow auto
		z-index -1
		width 950px
		margin 0 auto
		padding 25px
		transform translateX(-120%) rotateY(180deg)
		background white
		box-shadow 0 0 10px #444
		transform-style preserve3d
		transition all 1s ease-in-out
		backface-visibility hidden
		p
			text-indent 25px
		&#home 
			background urL("/images/home.jpg") no-repeat
			background-size cover
			width 100%
			vertical-align center
			h1
				color rgba(256, 256, 256, 0.2)
				text-align center
				position absolute
				left 50%
				top 50%
				width 500px
				height 100px
				margin -50px 0 0 -250px
				transition all 0.8s ease-in-out
			&:hover h1
				color rgba(256, 256, 256, 0.8)
				text-shadow 0 0 25px black

		&.active
			transform translateX(0) rotateY(0)
		&.active + article, &.active + article + article, &.active + article + article, &.active + article + article + article, &.active + article + article + article + article, &.active + article + article + article + article + article
			transform translateX(120%) rotateY(-180deg)
		img
			padding 5px
			background white
			border solid 1px #ccc
			margin 5px
			&.right
				float right !important
				margin-right none
			&.left 
				float left !important
				margin-left none
			&.center
				margin-left none
				margin-right none
		ul li
			overflow hidden
			margin 0
			padding 0
			list-style circle
			display table
			img
				max-width 200px
				max-height 200px
				float left
			p
				display table-cell
				vertical-align middle
				padding 15px
