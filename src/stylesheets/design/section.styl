section
	position fixed
	overflow hidden
	top 45px 
	bottom 0
	right 0
	left 0
	article
		position absolute
		left 0
		right 0
		top 0
		bottom 0
		overflow auto
		z-index -1
		transform translateY(-100%)
		transition all 0.5s ease-in-out
		width 950px
		margin 0 auto
		padding 25px
		p
			text-indent 25px
		&#home 
			background urL("/images/Castelul_Peles_3.jpg") no-repeat
			background-size cover
			width 100%
		&#vizitare
			h1
				margin-top 50px
			p
				text-indent 0
				margin 5px 0 0
			blockquote
				border none
				margin 10px 10px 0 0
				padding 0
				color #888
		&.active
			z-index 1
			transform translateY(0)
		& + article
			transform translateY(100%)
		img
			padding 5px
			background white
			border solid 1px #ccc
			margin 5px
			&.right
				float right !important
				margin-right none
			&.left 
				float left !important
				margin-left none
			&.center
				margin-left none
				margin-right none
		ul li
			overflow hidden
			margin 0
			padding 0
			list-style circle
			display table
			img
				max-width 200px
				max-height 200px
				float left
			p
				display table-cell
				vertical-align middle
				padding 15px
.third
	width 28%
	float left
	margin-right 2%
.third:nth-child(3n + 1)
	margin-right 0

.half
	width 48%
	float left
	margin-right 2%
.half:nth-child(2n + 1)
	margin-right 0
.third, .half
	overflow hidden
.clear
	display block
	clear both