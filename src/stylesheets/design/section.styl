section
	position fixed
	top 0
	bottom 0
	right 0
	left 0
	z-index 0
	article
		position fixed
		top 0
		bottom 0
		right 0
		width 0
		transition all 0.5s ease-in-out
		z-index 9
		&.active
			transform translateY(0)
		div
			max-width 920px
			padding 20px
			margin 100px auto 0
			height 100%
			border-top-left-radius 5px
			border-top-right-radius 5px
			background white