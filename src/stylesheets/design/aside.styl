aside
	position fixed
	left 0
	top 0
	height 45px
	width 45px
	transition box-shadow 0.45s ease-in-out
	background linear-gradient(left, white 0%, white 18.36%, rgba(256, 256, 256, 0) 100%) no-repeat
	background-position -300px 0
	transition-property height, bottom, background-position, opacity
	opacity 0.6
	z-index 9
	&>*
		transition all 0.5s ease-in-out
	&>i 
		line-height 45px !important
		height 45px !important
		width 45px !important
		font-size 14pt
		text-align center
		background white
		color white	
		text-shadow 0px 0px 5px black		
		top 0
		left 0
		position absolute
	&>nav
		display none
	&:hover 
		height 100%
		bottom 0
		opacity 1
		&>i
			opacity 0
		&>nav
			display block
			background white
			position absolute
			z-index 9
			left 0
			top 0
			padding-top 50px
			bottom 0
			border-top solid 1px lighten(#444, 75)
			width 45px
			box-shadow 0 0 5px #444
			nav
				display none
			li
				list-style none
				display block
				opacity 0.4
				transition opacity 0.25s ease-in-out
				position relative
				transition opacity 0.75s ease-in-out
				&>i
					width 45px !important
					height 45px !important
					text-align center
					line-height 45px
					background white
				&:hover
					opacity 1
					&>i
						color white
						background darken(white, 50)
					nav
						display block
						position absolute
						left 45px
						right -245px
						top -1px
						background white
						border solid 1px lighten(#444, 50)
						border-left none
						li
							display block
							padding 0
							opacity 0.8
							padding 0 25px
							line-height 45px
							height 45px
							text-align left
							color lighten(black, 50)
							transition color 0.5s ease-in-out
							a, a:visited, a:hover, a:link 
								display block
								height 100%
								width 100%
								color inherit
								text-decoration none
							&:first-child
								background darken(white, 50)
								color darken(white, 25)
								&:hover
									color white
							&:hover
								color black

