header
	position fixed
	left 0
	top 0
	bottom 0
	right 0
	z-index 1
	background black
	overflow auto
	nav
		box-shadow 0 0 25px #444
		overflow hidden
		li
			display inline-block
			float left
			width 50%
			height 250px
			background white
			box-shadow 0 0 250px rgba(0, 0, 0, 1) inset
			text-align center
			line-height 250px
			font-size 24pt
			transition all 0.5s ease-in-out
			background-size cover
			background-image url("/images/Castelul_Peles_3.jpg")
			overflow hidden
			a
				display block
				width 100%
				height 100%
				transition all 0.5s ease-in-out
				opacity 0
				color #ccc
			&:hover a, &:active a
				color white
				text-decoration none
				text-shadow 0 1px 1px black
				opacity 1
			&:hover, &:active
				box-shadow 0 0 250px rgba(0, 0, 0, 0.2) inset
			