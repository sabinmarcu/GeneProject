header
	position fixed
	top 0
	left 0
	right 0
	height 45px
	font-size 14pt
	line-height 45px
	box-shadow 0 0 15px #444
	z-index 9
	text-align center	
	background linear-gradient(top, #ddd 0%, #eee 49.9%, #ccc 50%, #fff 100%) #eee
	nav 
		display inline-block
		padding 0
		margin 0
		li
			list-style none
			text-align left
			display inline-block
			margin 0
			padding 0
			float left
			a
				display block
				color #666
				text-decoration none
				padding 0 10px
				margin 0
				transition all 0.5s ease-in-out
				height 45px
				line-height 45px
				border-left solid 1px #ccc
				border-right solid 1px #fff
				&:hover, &:active
					background rgba(256, 256, 256, 0.5)
					text-shadow 0 1px 1px white
					text-decoration none
					color black
			&:first-child a
				border-left none
			&:last-child a
				border-right none
