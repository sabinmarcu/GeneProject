header
	position fixed
	top 0
	left 0
	right 0
	height 45px
	font-size 18pt
	line-height 45px
	box-shadow 0 0 15px #444
	z-index 9
	text-align center	
	background linear-gradient(top, rgba(256, 256, 256, 0.1) 0%, rgba(256, 256, 256, 0.1) 50%, rgba(256, 256, 256, 0.2) 100%) #400
	nav 
		display inline-block
		padding 0
		margin 0
		li
			list-style none
			text-align left
			display inline-block
			margin 0
			padding 0
			float left
			a
				display block
				color #ccc
				text-decoration none
				padding 0 10px
				margin 0
				transition all 0.5s ease-in-out
				height 45px
				line-height 45px
				border-left solid 1px rgba(256, 256, 256, 0.2)
				border-right solid 1px rgba(256, 256, 256, 0.1)
				&:hover, &:active
					background rgba(0, 0, 0, 0.4)
					text-shadow 0 1px 1px black
					text-decoration none
					color white
			&:first-child a
				border-left none
			&:last-child a
				border-right none
